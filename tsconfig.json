{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "esnext",
    "types": ["node"],
    // "strict": true,
    "paths": {
      "@/*": ["./*"],
      "#/*": ["./src/*"],
      "lib/*": ["./src/lib/*"],
      "platform/*": ["./src/platform/*"],
      "state/*": ["./src/state/*"],
      "view/*": ["./src/view/*"],
      "crypto": ["./src/platform/crypto.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
